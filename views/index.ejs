<div class="banner">
  <% const banner = myBanner.MyMovies.slice(0, 20) %>
  <% let randomMovie = banner[Math.floor(Math.random() * banner.length - 1)] %>
  <header class="banner"
  style="background-size: cover;background-image: url('https://image.tmdb.org/t/p/original<%= randomMovie[1] %>');background-position: center center;">
    <div class="banner_contents">
      <h1><%= randomMovie[0] %></h1>
      <div class="banner_buttons">
        <buttons class="banner_buttons">Play</buttons>
        <buttons class="banner_buttons">My List</buttons>
      </div>
    </div>
    <h1 class="banner_description">
      <%= randomMovie[2] %>
    </h1>
  </header>
</div>
